<Window
    x:Class="TaskMaster.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TaskMaster" Width="800" Height="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBox x:Name="NewTaskTextBox" Width="500" Height="30" Margin="0 0 8 0" />
            <Button x:Name="AddButton" Content="Ekle" Width="100" Height="30" Click="AddButton_Click"/>
        </StackPanel>

        <ListView x:Name="TasksListView" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Başlık" DisplayMemberBinding="{Binding Title}" Width="400"/>
                    <GridViewColumn Header="Durum" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsCompleted}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>